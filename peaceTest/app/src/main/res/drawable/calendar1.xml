<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/calendar_background1">
    <LinearLayout
        android:layout_marginTop="310dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/day"
            android:layout_marginLeft="20dp"
            android:text="07"
            android:textSize="70dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/month"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="MAY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/year"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <cn.edu.hebtu.software.peace.utils.LetterSpacingTextView
            android:id="@+id/calendar_sentence"
            android:layout_width="345dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold" />
        <View
            android:layout_marginLeft="18dp"
            android:layout_height="2dp"
            android:background="#C5C1AA"
            android:layout_width="30dp"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/author"
                android:layout_marginLeft="18dp"
                android:textSize="20dp"
                android:text="诗人，泰戈尔"
                android:textColor="#CDC9C9"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <com.ldoublem.thumbUplib.ThumbUpView
                android:id="@+id/zan"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_marginTop="-3dp"
                android:id="@+id/zan_num"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:textSize="14dp"
                android:text="1278"
                android:textColor="#CDC9C9"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
